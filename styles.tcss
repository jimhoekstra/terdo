Checkbox {
    width: 100%;
}

Container {
    layout: grid;
    grid-size: 3 1;
    grid-gutter: 3;
}

#note-content {
    column-span: 2;
    height: 100%;
}

Note {
    height: 100%;
    background: transparent;
}

TaskList {
    background: transparent;
}

#note-viewer {
    border: tall transparent;
}

Note:focus > #note-viewer {
    border: tall $primary;
}